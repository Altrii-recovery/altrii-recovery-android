generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Platform {
  ANDROID
  IOS
  OTHER
}

model User {
  id                   String @id @default(cuid())
  email                String @unique
  preferredLockMinutes Int    @default(60)

  devices Device[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Device {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  name     String?
  platform Platform @default(ANDROID)

  settings DeviceSettings?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model DeviceSettings {
  deviceId String @id
  device   Device @relation(fields: [deviceId], references: [id], onDelete: Cascade)

  blockAdult    Boolean @default(true)
  blockSocial   Boolean @default(false)
  blockYouTube  Boolean @default(false)
  blockGambling Boolean @default(false)
  blockVpn      Boolean @default(false)

  updatedAt DateTime @updatedAt
}
