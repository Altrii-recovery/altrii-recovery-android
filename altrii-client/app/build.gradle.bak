apply plugin: "kotlin-android"
apply plugin: "com.android.application"

android {
  signingConfigs {
    release {
      // Reads from environment or falls back to local keystore filename
      storeFile file(System.getenv("ALTRII_KEYSTORE") ?: "keystore-altrii.jks")
      storePassword System.getenv("ALTRII_STORE_PW")
      keyAlias System.getenv("ALTRII_KEY_ALIAS")
      keyPassword System.getenv("ALTRII_KEY_PW")
    }
  }
  buildTypes {
    release {
      signingConfig signingConfigs.release
      minifyEnabled true
      shrinkResources true
      proguardFiles getDefaultProguardFile('proguard-android-optimize.txt'), 'proguard-rules.pro'
    }
  }
}
